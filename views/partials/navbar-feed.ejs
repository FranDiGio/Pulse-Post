<header class="container-fluid p-0 bg-light sticky-top shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container d-flex flex-nowrap">
            <!-- Home, Trending, and Search -->
            <div class="d-flex align-items-center">
                <a href="/feed/" class="col-2 me-1">
                    <div class="flex-shrink-0 overflow-hidden my-3" style="max-height: 60px">
                        <img
                            class="header-icon"
                            alt="home icon"
                            src="/svg/house.svg"
                            style="max-height: 60px"
                        />
                    </div>
                </a>

                <a class="col-2 me-1 button-cursor" id="trending-btn">
                    <div class="flex-shrink-0 overflow-hidden my-3" style="max-height: 60px">
                        <img
                            class="header-icon"
                            alt="fire icon"
                            src="/svg/fire.svg"
                            style="max-height: 60px"
                        />
                    </div>
                </a>

                <form class="col-10 col-lg-auto mb-0 me-lg-3" role="search">
                    <input
                        type="search"
                        class="form-control open-sans-title"
                        placeholder="Search..."
                        aria-label="Search"
                    />
                </form>
            </div>

            <!-- Right side navlinks -->
            <div class="dropdown text-end mt-2 d-flex flex-nowrap">
                <p class="me-3 mt-2"><%= username %></p>
                <a
                    href="#"
                    class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                >
                    <img
                        src="/images/profile-female.png"
                        alt="mdo"
                        width="40"
                        height="40"
                        class="rounded-circle"
                    />
                </a>

                <ul class="dropdown-menu text-small">
                    <li><a class="dropdown-item" href="#">New Post</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#">Sign out</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= username %>'s Profile</title>
		<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<link href="/styles/global.css" rel="stylesheet" />
		<link href="/styles/feed.css" rel="stylesheet" />
		<link href="/styles/profile.css" rel="stylesheet" />
		<link href="/styles/backgrounds.css" rel="stylesheet" />
	</head>

	<body class="row d-flex justify-content-center m-0">
		<%- include('partials/navbars/navbar-profile.ejs') %>

		<div class="h-100 col-12 col-xxl-8 px-0 m-0">
			<div class="w-100 profile-background position-relative rounded-bottom">
				<img src="<%= profileBackgroundUrl %>" class="w-100 h-100" style="object-fit: cover" />
			</div>

			<div class="row justify-content-center position-relative m-0">
				<div
					class="col-3 d-flex justify-content-center align-items-center position-relative profile-circle rounded-circle bg-white"
				>
					<img src="<%= profilePictureUrl %>" class="profile-photo rounded-circle" />
				</div>
				<div class="col-6">
					<div class="row profile-username w-auto ms-2 mt-2 px-2 pt-1 rounded bg-light">
						<h3><%= username %></h3>
					</div>
					<div class="row profile-description w-auto ms-2 mt-2 px-2 pt-2 rounded bg-light">
						<p><%= bio %></p>
					</div>
				</div>
			</div>

			<div style="height: 50px"></div>

			<div class="row justify-content-center mb-5">
				<div class="col-3 profile-metrics">
					<div class="pt-2 ps-2 mx-3">
						<h4>Followers</h4>
						<p class="lead mb-3">0</p>
						<h4>Following</h4>
						<p class="lead mb-3">0</p>
						<h4>Posts</h4>
						<p class="lead pb-1">0</p>
					</div>
				</div>
				<div class="col-6 px-3 ms-4">
					<div class="bg-light rounded pb-1">
						<div class="px-3">
							<h2 class="pt-2 w-100 border-bottom">Posts</h2>
						</div>

						<div class="px-3">
							<div class="my-5"><%- include('partials/sample-post.ejs') %></div>
							<div class="my-5"><%- include('partials/sample-post.ejs') %></div>
							<div class="my-5"><%- include('partials/sample-post.ejs') %></div>
							<div class="my-5"><%- include('partials/sample-post.ejs') %></div>
						</div>

						<nav>
							<ul class="pagination justify-content-center">
								<li class="page-item">
									<a class="page-link">
										<span>&laquo;</span>
									</a>
								</li>
								<li class="page-item"><a class="page-link">1</a></li>
								<li class="page-item"><a class="page-link">2</a></li>
								<li class="page-item"><a class="page-link">3</a></li>
								<li class="page-item">
									<a class="page-link">
										<span>&raquo;</span>
									</a>
								</li>
							</ul>
						</nav>
					</div>
				</div>
			</div>
		</div>

		<!-- Create Post Modal -->
		<%- include('partials/post-modal.ejs') %>
		<!-- Main Settings Modal -->
		<%- include('partials/settings-modals/01-main-settings.ejs') %>
		<!-- Profile Picture Settings Modal -->
		<%- include('partials/settings-modals/02-picture-settings.ejs') %>
		<!-- Profile Background Settings Modal -->
		<%- include('partials/settings-modals/03-background-settings.ejs') %>
		<!-- Biography Settings Modal -->
		<%- include('partials/settings-modals/04-biography-settings.ejs') %>
		<!-- Account Settings Modal -->
		<%- include('partials/settings-modals/05-account-settings.ejs') %>

		<script src="/js/auth.js" charset="utf-8"></script>
		<script src="/js/settings/profilePictureEvents.js" charset="utf-8"></script>
		<script src="/js/settings/profileBackgroundEvents.js" charset="utf-8"></script>
		<script src="/js/settings/profileBioEvents.js" charset="utf-8"></script>
		<script src="/js/postCreationEvents.js" charset="utf-8"></script>
		<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
			crossorigin="anonymous"
		></script>
	</body>
</html>
